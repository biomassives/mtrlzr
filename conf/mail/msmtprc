defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        /var/log/msmtp.log

# AWS SES
account        smtp
host           smtp.helloworld.com
port           587
from           hello@world.com
user           helloworld
password       123456789

# Set a default account
account default : smtp